{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build debug",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "type": "process",
            "command": "dotnet",
            "args": [
                "build",
                "-c",
                "debug",
                "${workspaceFolder}/Abacus.sln"
            ],
            "problemMatcher": "$msCompile",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": true
            }
        },
        {
            "label": "build release",
            "group": "build",
            "type": "process",
            "command": "dotnet",
            "args": [
                "build",
                "-c",
                "release",
                "${workspaceFolder}/Abacus.sln"
            ],
            "problemMatcher": "$msCompile",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": true
            }
        }
    ]
}
